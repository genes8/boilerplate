# ============================================
# Application
# ============================================
ENVIRONMENT=development
DEBUG=true

# ============================================
# Domain (Production)
# ============================================
DOMAIN=yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# ============================================
# Database (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=appuser
DB_PASSWORD=secure_password_here
DB_NAME=appdb
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ============================================
# Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# ============================================
# Security
# ============================================
# JWT Secret - minimum 32 characters
JWT_SECRET=your_256_bit_secret_key_minimum_32_characters
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Super Admin (Initial Setup)
# ============================================
# Leave SUPERADMIN_PASSWORD empty for auto-generated password
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=Test1234!

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# File Storage (S3-Compatible)
# ============================================
S3_ENDPOINT_URL=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET_NAME=documents
S3_REGION=fsn1

# ============================================
# Watch Folders (Optional)
# ============================================
WATCH_FOLDERS_ENABLED=false
WATCH_FOLDERS_ALLOWED_PATHS=/mnt/imports,/mnt/shared
WATCH_FOLDERS_DEFAULT_INTERVAL=60
WATCH_FOLDERS_MAX_FILE_SIZE=104857600

# ============================================
# AI / OpenRouter (Optional)
# ============================================
OPENROUTER_API_KEY=
OPENROUTER_DEFAULT_MODEL=qwen/qwen2.5-vl-72b-instruct

# ============================================
# OIDC / SSO (Optional)
# ============================================
OIDC_ENABLED=false
OIDC_ISSUER_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URI=

# ============================================
# Monitoring (Optional)
# ============================================
SENTRY_DSN=

# ============================================
# Thumbnails / Document Processing
# ============================================
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=400
SUPPORTED_FORMATS=pdf,docx,doc,txt,png,jpg,jpeg,gif,xlsx,xls,csv

# ============================================
# Docker Development Environment
# ============================================
# pgAdmin (optional)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
